  <h3><u>บันทึกข้อมูลคู่ค้า</u></h3>
  <section class="main">
    <section>
      <!-- column1 -->
    <form method="POST" action="/home/partner">

      <div class="column">

        <label>รหัสคู่ค้า</label><br>
        <input type="text" name="ID_partner">
        <br>
        <label>ชื่อบริษัท</label><br>
        <input type="text" name="name">
        <br>
        <label>เบอร์ติดต่อ</label><br>
        <input type="text" name="telephone">
        <br>
        <label>Email</label><br>
        <input type="text" name="email">
        <br>
        <label>ที่อยู่</label><br>
        <textarea name="address"></textarea>
        <br>
        <label>Fax</label><br>
        <input type="text" name="fax">
        <br>
        <!-- <label>นามสกุล</label><br>
        <input type="text" name="surname">
        <br> -->
        <label>ประเภทคู่ค้า</label><br>
        <select name="typecustomer">
          <option value="choose" hidden>เลือก...</option>
          <option value="buy">นายหน้า</option>
          <option value="sell">บริษัทอะไหล่</option>
          <option value="repair">ขนส่ง</option>
        </select>
      </div>
      <!-- column 2 -->
      <div class="column">
        <label class="label-partner">ค้นหาข้อมูลคู่ค้า</label><br>
        <input class="search" type="text" id="searchpartner" style="width: 350px; height: 30px; font-size: 1.1vw;">
        <button class="button3" style="margin-left: 1vw;">ค้นหา</button>
        <br><br>
        <table>
          <tr>
            <th style="text-align: center;">รหัสคู่ค้า</th>
            <th style="text-align: center;">ชื่อบริษัท</th>
            <th style="text-align: center;">ที่อยู่</th>
            <th style="text-align: center;">เบอร์ติดต่อ</th>
          </tr>
          <% for(var i=0; i < partner.length; i++) { %>
            <tr>
              <td style="text-align: center;"><%= partner[i].ID_partner %></td> 
              <td style="text-align: center;"><%= partner[i].name %></td>
              <td style="text-align: center;"><%= partner[i].address %></td>
              <td style="text-align: center;"><%= partner[i].telephone %></td>
            </tr>
            <% } %>     
        </table>
      </div>
      <div class="column" align="center">
        <button class="button1" type="submit">บันทึก</button>
      </div>
      <div class="column" align="center">
            <button class="button2">ยกเลิก</button>
          </div>
    </form>
    </section>
  </section>

